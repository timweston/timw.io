---
layout: layouts/base.njk
---

<div class="post-wrapper">
  <div class="post">
    <article>
      {# The post front matter includes the title property #}
      <header class="post-header">
        <h2 class="post-title">{{ title }}</h2>
        <div class="post-details">
          <time datetime="{{ page.date | htmlDateString }}">{{
            page.date | readableDate
          }}</time>
          <span class="sep">&bull;</span>
          <span class="post-tags">
            {%- for tag in tags | filterTagList %} {%- set tagUrl %}/tags/{{
              tag | slugify
            }}/{% endset %}
            <a href="{{ tagUrl | url }}" class="post-tag">{{ tag }}</a>
            {%- endfor %}
          </span>
        </div>
      </header>

      <section>
        {{ content | safe }}
      </section>

      <footer>
        <div class="controls">
          {% if collections.posts %}
          {% set nextPost = collections.posts | getNextCollectionItem(page) %}
          {% set prevPost = collections.posts | getPreviousCollectionItem(page) %}
          {% if prevPost %}&laquo; <a class="prev" href="{{ prevPost.url | url }}">{{ prevPost.data.title }}</a>{% endif %}
          {% if prevPost and nextPost %} &bull; {% endif %}
          {% if nextPost %}<a class="next" href="{{ nextPost.url | url }}">{{ nextPost.data.title }}</a> &raquo;{% endif %}
          {% endif %}
        </div>
      </footer>
    </article>
  </div>
</div>
