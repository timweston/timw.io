---
pagination:
  data: collections
  size: 1
  alias: tag
  filter:
    - all
    - nav
    - post
    - posts
    - tagList
  addAllPagesToCollections: true
layout: layouts/base.njk
permalink: /tags/{{ tag | slugify }}/
eleventyComputed:
  title: '{{ tag | title }}'
  description: 'All posts tagged “{{ tag }}”'
---

{% set postslist = collections[tag] %}
<h2>Posts Tagged "{{ tag | title }}"</h2>

{% for post in postslist | reverse %}
<article class="h-entry">
  <header>
    <h2 class="p-name"><a class="u-url" href="{{ post.url }}">{{ post.data.title }}</a></h2>
    <time class="dt-published" datetime="{{ post.data.page.date | htmlDateString }}">{{ post.data.page.date | readableDate }}</time>
    <span>&bull;</span>
    <span>
      {% for tag in post.data.tags | filterTagList %} {% set tagUrl %}/tags/{{ tag | slugify }}/{% endset %}
      <a href="{{ tagUrl | url }}">{{ tag }}</a>
      {% endfor %}
    </span>
  </header>
  <section class="e-content">
    <p>
      {{ post.data.page.excerpt | md | safe }}
    </p>
    <span><a href="{{ post.url }}">Continue reading&hellip;</a></span>
  </section>
</article>
{% endfor %}
